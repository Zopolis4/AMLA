{
    "name": "Automatic Mediafire Link Archiver",
    "version": "1.0.0",
    "description": "Automatically archives all mediafire links on pages you visit by sending them to ArchiveTeam.",
    "manifest_version": 3,
    "content_scripts": [{
            "matches": ["<all_urls>"],
            "all_frames": true,
            "js":      ["AMLA.js"],
            "run_at": "document_start"
        }],
    "icons": {
     "32": "icon32.png",
     "48": "icon48.png",
     "128": "icon128.png"
  }
}